{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**/*.{js,jsx,ts,tsx,json,md}", "!node_modules", "!dist", "!.next", "!**/*.snap"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"bracketSpacing": true,
		"lineWidth": 150,
		"formatWithErrors": true,
		"bracketSameLine": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"patterns": [
							{
								"group": ["./**", "../**"],
								"message": "Use the @ alias for all internal project imports, even in the same directory."
							}
						]
					}
				}
			},
			"suspicious": {
				"noIrregularWhitespace": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
